      "2": "îƒ¯",
      "3": "îƒ°",
      "4": "îƒ±",
      "5": "îƒ²",
      "6": "îƒ³",
      "7": "îƒ´",
      "8": "îƒµ",
      "9": "îƒ¶",
      "10": "îƒ­",
      "default": "ï„‘",
      "special": "ï“‡"
