// -*- mode: jsonc -*-
{
  "reload_style_on_change": true,
  "layer": "top",
  // Waybar at top layerq
  "position": "top",
  // Waybar position (top|bottom|left|right)
  //"height": 30,
  // Waybar height (to be removed for auto height)
  // "width": 1280, // Waybar width
  "spacing": 0,
  // Gaps between modules (4px)
  // Choose the order of the modules
  "modules-left": [
    "custom/launcher",
    "hyprland/workspaces"

//    "mpris"
  ],
//  "modules-center": [
//    "hyprland/window"
//  ],
  "modules-right": [
    "group/group-tray",
    "pulseaudio",
    "temperature",
    "cpu",
    "memory",
    "hyprland/language",
    "battery",
    "battery#bat2",
    "bluetooth",
    "network",
    "clock",
    "custom/notification",
    "group/group-power"
  ],
  "group/group-tray": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 600,
      "children-class": "not-power",
      "transition-left-to-right": true
    },
    "modules": ["custom/menu","tray"]
  },
  "group/group-power": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 500,
      "transition-left-to-right": false
    },
    "modules": [
      "custom/power",
      "custom/lock",
      "custom/reboot"
    ]
  },
  "custom/lock": {
    "format": "ï€£",
    "tooltip-format": "Lock Session",
    "on-click": "loginctl lock-session"
  },
  "custom/reboot": {
    "format": "ïƒ¢",
    "tooltip-format": "Reboot System",
    "on-click": "reboot"
  },
  "custom/power": {
    "format": "ï€‘",
    "tooltip-format": "Shutdown System",
    "on-click": "shutdown now"
  },
  "custom/menu":{
    "format": "ï„·"
  },
  "tray": {
