@import "./default"


window {
   children: [listview];
   fullscreen: true;
   background-color: rgba(0, 0, 0, 0.9);
    location:                    center;
    anchor:                      center;
    x-offset:                    0px;
    y-offset:                    0px;
}

element {
    orientation: vertical;
    children: [element-icon, element-text];
    padding: 5% 1%;
}


element-text {
    font: "Noto Sans Mono SemiBold 18";
    vertical-align: 0.5;
    horizontal-align: 0.5;
    spacing: 1%;
}

element-icon {
    size: 64px;
}

listview {
    padding: 40% 1%;
    margin: 0 20%;
	flow: horizontal;
	columns: 5;
    scrollbar: false;
}
